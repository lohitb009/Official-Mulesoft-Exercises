    <flow name="get:\accounts:accounts-api-config">
        <flow-ref doc:name="GET:flights_customers_by_type" doc:id="2e877ec8-d77a-430c-a06f-065064f320f5" name="GET:flights_customers_by_type" />
        <ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
payload map ( payload01 , indexOfPayload01 ) -> {
	firstName: (payload01.name as String splitBy ' ')[0] default "",
	lastName: (payload01.name as String splitBy ' ')[1] default "",
	country: payload01.country default "",
	address: ((payload01.street default "") ++ (payload01.city default "")) ++ (payload01.state default ""),
	id: payload01.accountID,
	postal: payload01.postal default "",
	creationDate: payload01.creationDate as String,
	"type": payload01.accountType default "",
	miles: payload01.miles default 0
}]]></ee:set-payload>
            </ee:message>
        </ee:transform>
    </flow>
